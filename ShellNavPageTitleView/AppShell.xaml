<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShellNavPageTitleView.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShellNavPageTitleView"
    NavigationPage.TitleView="{StaticResource TitleView}"
    Shell.NavBarIsVisible="False"
    Shell.FlyoutBehavior="Flyout">
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <Tab Title="Main Page 1">
            <ShellContent Title="Main Page 1"
                            ContentTemplate="{DataTemplate local:MainPage}" />
            <ShellContent Title="Main Page 2"
                            ContentTemplate="{DataTemplate local:MainPage}" />
            <ShellContent Title="Main Page 3"
                            ContentTemplate="{DataTemplate local:MainPage}" />
            <ShellContent Title="Main Page 4"
                          ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <ShellContent Title="Main Page 1"
                      ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>
    <ShellContent Title="Main Page 2"
                ContentTemplate="{DataTemplate local:MainPage}" />

</Shell>

